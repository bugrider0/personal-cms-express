{{>panel/include/header}}

<div class="container pt-20 h-screen panel">
    <div class="grid grid-cols-12 gap-5 py-10">
        {{>panel/include/right-side}}

        <div class="panel__left-side">
            <div class="flex flex-col md:flex-row gap-5 items-center justify-between mb-3">
                <h4 class="font-bold text-xl">همه دسته بندی ها</h4>
                <label class="btn btn-primary" for="my-modal">افزودن دسته بندی جدید</label>
            </div>
            <div class="overflow-x-auto w-full">
                <table class="table w-full">
                    <!-- head -->
                    <thead>
                    <tr>
                        <th>انتخاب</th>
                        <th>عنوان</th>
                        <th>پدر</th>
                        <th>تنظیمات</th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- row 1 -->
                    {{#categories}}
                        <tr>
                            <td>
                                <input type="checkbox" class="checkbox checkbox-primary">
                            </td>
                            <td>
                                <div class="flex items-center space-x-3">
                                    <!--<div class="avatar">
                                        <div class="mask mask-squircle w-12 h-12">
                                            <img src="https://api.lorem.space/image/face?hash=92048"
                                                 alt="Avatar Tailwind CSS Component"/>
                                        </div>
                                    </div>-->
                                    <div>
                                        <div class="font-bold mr-2">{{title}}</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                عنوان پدر
                            </td>
                            <th>
                                <button class="btn btn-info btn-xs">مشاهده</button>
                                <label for="my-modal" class="btn btn-warning btn-xs">ویرایش</label>
                                <a href="#my-modal-2" class="btn btn-error btn-xs">حذف</a>
                            </th>
                        </tr>
                    {{/categories}}

                    </tbody>

                </table>
            </div>

            <div class="flex flex-col md:flex-row gap-5 items-center justify-between mt-5">
                <div class="btn-group">
                    <button class="btn btn-active !text-white">1</button>
                    <button class="btn">2</button>
                    <button class="btn">3</button>
                    <button class="btn">4</button>
                </div>
                <div>
                    <button class="btn btn-primary">حذف موارد انتخابی</button>
                </div>
            </div>


        </div>
    </div>
</div>


<input type="checkbox" id="my-modal" class="modal-toggle">
<div class="modal">
    <div class="modal-box overflow-hidden">
        <!--        <h3 class="font-bold text-lg mb-3">ا</h3>-->
        <form action="/panel/categories" method="post">
            <div class="flex flex-col md:flex-row gap-5">
                <select class="select select-bordered basis-full md:basis-1/2" name="parentCategory">
                    <option disabled selected>دسته بندی پدر</option>
                    {{#categories}}
                        <option value="{{id}}">{{title}}</option>
                    {{/categories}}
                </select>
                <input type="text" name="title" placeholder="عنوان دسته بندی جدید"
                       class="input input-bordered basis-full md:basis-1/2 py-3 md:py-0">
            </div>
            <div class="modal-action">
                <button type="submit" for="my-modal" class="btn">ایجاد</button>
                <label for="my-modal" class="btn">بستن</label>
            </div>
        </form>
    </div>
</div>


<div class="modal" id="my-modal-2">
    <div class="modal-box">
        <h3 class="font-bold text-lg">از حذف مطمئن هستید؟</h3>
        <div class="modal-action">
            <a href="#" class="btn btn-error">بله</a>
            <a href="#" class="btn btn-info">خیر</a>
        </div>
    </div>
</div>

</body>
</html>